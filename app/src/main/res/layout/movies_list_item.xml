<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movies_list_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_background">


        <ImageView
            android:id="@+id/movies_list_item_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poster_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movies_list_age_raiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/main_background"
            android:padding="2dp"
            android:text="+13"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/movies_list_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/favorite_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movies_list_item_genre_tags"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="14dp"
            android:text="Action, Adventure, Drame"
            android:textColor="@color/text_red_tag_line"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/movies_list_item_poster"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/movies_list_item_star_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toStartOf="@+id/movies_list_item_genre_tags"
            app:layout_constraintTop_toBottomOf="@id/movies_list_item_genre_tags" />

        <ImageView
            android:id="@+id/movies_list_item_star_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toEndOf="@+id/movies_list_item_star_1"
            app:layout_constraintTop_toTopOf="@+id/movies_list_item_star_1" />

        <ImageView
            android:id="@+id/movies_list_item_star_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toEndOf="@+id/movies_list_item_star_2"
            app:layout_constraintTop_toTopOf="@+id/movies_list_item_star_2" />

        <ImageView
            android:id="@+id/movies_list_item_star_4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toEndOf="@+id/movies_list_item_star_3"
            app:layout_constraintTop_toTopOf="@+id/movies_list_item_star_3" />

        <ImageView
            android:id="@+id/movies_list_item_star_5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toEndOf="@+id/movies_list_item_star_4"
            app:layout_constraintTop_toTopOf="@+id/movies_list_item_star_4" />

        <TextView
            android:id="@+id/movies_list_item_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="125 REVIEWS"
            android:textColor="@color/text_grey"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/movies_list_item_star_1"
            app:layout_constraintStart_toEndOf="@+id/movies_list_item_star_5"
            app:layout_constraintTop_toTopOf="@+id/movies_list_item_star_1" />

        <TextView
            android:id="@+id/movies_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:lineSpacingMultiplier="0.85"
            android:text="Avengers: End Game"
            android:textColor="@color/text_light_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/movies_list_item_star_1"
            app:layout_constraintTop_toBottomOf="@id/movies_list_item_poster" />

        <TextView
            android:id="@+id/movies_list_item_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="137 MIN"
            android:textColor="@color/text_grey"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/movies_list_item_star_1"
            app:layout_constraintTop_toBottomOf="@+id/movies_list_item_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
